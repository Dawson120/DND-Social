<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/characters/edit.css">
<%- include('../partials/nav') %>

<main>
  <form action="/characters" method="POST">
    
<section class="character-sheet">

<!-- name n junk below -->
  <section class="general-info">

      <input value="<%= character.name %>" type="text" name="name" id="name-input">
      
    <div class="info-container">
      Level: <input value="<%= character.level %>" type="number"  name="level" id="level-input" class="input">

      Race: <input value="<%= character.race %>" type="text"  name="race" id="race-input" class="input">

      Age: <input value="<%= character.age %>" type="number"  name="age" id="age-input" class="input">

      Height: <input value="<%= character.height %>" type="string"  name="height" id="height-input" class="input">

      Weight:<input value="<%= character.weight %>" type="number"  name="weight" id="weight-input" class="input">LBs
    </div>
  </section>
<!-- name n junk above -->
<div class="bottom-sheet">
<!-- skills n junk -->
  <section class="skills-info">

    <div class="skills-container">
      <h1 class="skill-name">Strength</h1>
      <input value="<%= character.str %>" type="number"  name="str" id="str-input" class="skill-input">
      <input value="<%= character.strMod %>" type="number"  name="strMod" id="str-input" class="skill-mod">
    </div>

    <div class="skills-container">
      <h1 class="skill-name">Dexterity</h1>
      <input value="<%= character.dex %>" type="number"  name="dex" id="dex-input" class="skill-input">
      <input value="<%= character.dexMod %>" type="number"  name="dexMod" id="dexMod-input" class="skill-mod">
    </div>
    
    <div class="skills-container">
      <h1 class="skill-name">Constitution</h1>
      <input value="<%= character.con %>" type="number"  name="con" id="con-input" class="skill-input">
      <input value="<%= character.conMod %>" type="number"  name="conMod" id="conMod-input" class="skill-mod">
    </div>
    
    <div class="skills-container">
      <h1 class="skill-name">Intelligence</h1>
      <input value="<%= character.intel %>" type="number"  name="intel" id="intel-input" class="skill-input">
      <input value="<%= character.intelMod %>" type="number"  name="intelMod" id="intelMod-input" class="skill-mod">
    </div>
    
    <div class="skills-container">
      <h1 class="skill-name">Wisdom</h1>
      <input value="<%= character.wis %>" type="number"  name="wis" id="wis-input" class="skill-input">
      <input value="<%= character.wisMod %>" type="number"  name="wisMod" id="wisMod-input" class="skill-mod">
    </div>
    
    <div class="skills-container">
      <h1 class="skill-name">Charisma</h1>
      <input value="<%= character.char %>" type="number"  name="char" id="str-input" class="skill-input">
      <input value="<%= character.charMod %>" type="number"  name="charMod" id="charMod-input" class="skill-mod">
    </div>
    



  </section>
<!-- skills n junk -->

<section class="combat-info">

  
  <section class="armor-speed-init">
    <div class="armor">
      <span class="armor-body">Armor:
        <span><input value="<%= character.armorClass %>" type="number" name="armorClass"></span>
      </span>    
    </div>
    <div class="speed">
      <span class="speed-body">Speed: <span><input value="<%= character.speed %>" type="number" name="speed"></span>
      </span>
    </div>
    <div class="initiative">
        <span class="initiative-body">Initiative: <span><input value="<%= character.initiative %>" type="number" name="initiative"></span>
        </span>
    </div>


    
  <section class="skillchecks">
  
  <label for="skillAcrobatics-input">Acrobatics:</label>
